								<li>
									<a class="dropdown-item" href="#">Ulubione</a>
								</li>
							</ul>
						</li>
						<li class="nav-item" style="margin-right: 20px">
							<a class="nav-link" href="{{ path('app_logout') }}" tabindex="-1" aria-disabled="true">Wyloguj</a>
						</li>
					{% else %}
						<li class="nav-item" style="margin-right: 20px">
							<a class="nav-link" href="/login">Zaloguj się</a>
						</li>
						<li class="nav-item" style="margin-right: 20px">
							<a class="nav-link" href="/register">Zarejestruj się</a>
						</li>
					{% endif %}
