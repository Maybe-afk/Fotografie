<div class="card">
	<a href="{{ path('product_show', {'id': product.id}) }}">
		<img src="{{product.image}}" alt="cos" class="card-img-top" style="max-height:250px">
	</a>
	<div class="card-body">
		<div class="card-title text-primary font-weight-bold">
			<div class="row">
				<div class="col-md-6">
					

				</div>
				
			</div>
		</div>


		<div>
			<p style="font-size:17px">{{product.name}}</p>
		</div>


	</div>
	<div class="d-flex justify-content-start offerTag" style="margin-left: 20px">
		<p class="tags">Tags:</p>
		{% for c in product.categories %}
			<em class="text-muted text-primary text-italic">#{{c.name}}</em>
		{% endfor %}
	</div>
</div>
