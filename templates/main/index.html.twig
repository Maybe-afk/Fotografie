{% extends 'base.html.twig' %}


{% block title %}Podchody
{% endblock %}

{% block body %}
	<div class="container">
		<div class="row">
			<div class="col-md-12" style="z-index: 5;">
				{% include 'main/_filter.html.twig' with {form: form, min: min, max: max} only  %}
			</div>
			<div class="col-md-12">
				<div class="grid">
					{% for product in products %}
						{% include 'main/_card.html.twig' with {product: product} only  %}
					{% endfor %}
				</div>
				<div class="mx-auto" style="width: 200px;">
					{{knp_pagination_render(products)}}
				</div>
			</div>
		</div>
	</div>

{% endblock %}
