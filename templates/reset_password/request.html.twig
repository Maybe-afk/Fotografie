{% extends 'base.html.twig' %}

{% block title %}Reset your password
{% endblock %}

{% block body %}
	{% for flashError in app.flashes('reset_password_error') %}
		<div class="alert alert-danger" role="alert">{{ flashError }}</div>
	{% endfor %}

	<div class="container" style="max-width: 700px; margin-top:10%; margin-bottom: 200px">
		<div class="card" style="text-align:center; height: 400px">
			<h2 class="mt-5">Przypomnij hasło</h2>
			<div class="card-body">
				<h5 class="card-title mt-3">Podaj adres e-mail na który ma zostać wysłana wiadomość ze zmianą hasła</h5>
				<div class="mt-3">
					{{ form_start(requestForm) }}
					<div class="d-flex justify-content-center">
						{{ form_row(requestForm.email, {'attr': {'class': 'form-control', 'style': 'width:300px; text-align:center'}})}}
					</div>
					<button class="btn btn-primary mt-3" style="width: 200px;">Wyślij</button>
					{{ form_end(requestForm) }}
				</div>
			</div>
		</div>
	</div>

{% endblock %}
