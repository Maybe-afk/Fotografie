{% extends 'base.html.twig' %}

{% block title %}Register{% endblock %}

{% block body %}
    {% for flashError in app.flashes('verify_email_error') %}
        <div class="alert alert-danger" role="alert">{{ flashError }}</div>
    {% endfor %}

    <div class="container" style="max-width:350px; margin-top:10%">
        <div class="card card-container">
            <h4 class="card-title mt-3 text-center">Rejestracja</h4>
            <div class="card-body d-flex justify-content-center">    
                {{ form_start(registrationForm) }}    
                <div class='row'>
                    <div class='col col-md-3 col-12 d-flex justify-content-center' style="margin-top:2%">
                        Nazwa:
                    </div>
                    <div class='col col-md-9 col-12 d-flex justify-content-center'>
                        {{ form_row(registrationForm.name, {'attr': {'class': 'form-control'}}) }}
                    </div>
                    <div class='col col-md-3 col-12 d-flex justify-content-center' style="margin-top:2%">
                        Imię: 
                    </div>
                    <div class='col col-md-9 col-12 d-flex justify-content-center'>
                        {{ form_row(registrationForm.firstname, {'attr': {'class': 'form-control'}}) }}
                    </div>
                    <div class='col col-md-3 col-12 d-flex justify-content-center' style="margin-top:2%">
                        E-mail:
                    </div>
                    <div class='col col-md-9 col-12 d-flex justify-content-center'>
                        {{ form_row(registrationForm.email, {'attr': {'class': 'form-control'}}) }}
                    </div>
                    <div class='col col-md-3 col-12 d-flex justify-content-center' style="margin-top:2%">
                        Hasło:
                    </div>
                    <div class='col col-md-9 col-12 d-flex justify-content-center'>
                        {{ form_row(registrationForm.plainPassword, {'attr': {'class': 'form-control'}}) }}
                    </div>
                    <div class='col col-md-4 col-6 d-flex justify-content-end' style="margin-top:2%">
                        Regulamin
                    </div>
                    <div class='col col-md-8 col-6 d-flex justify-content-left' style="margin-top:2%">
                        {{ form_row(registrationForm.agreeTerms) }}                
                    </div>                     
                </div>
                    <div class="d-flex justify-content-center" style="margin-top: 4%">
                        <button type="submit" class="btn btn-dark">Rejestracja</button>    
                    </div>
                
                {{ form_end(registrationForm) }}
            </div>
        </div>
    </div>


{% endblock %}
