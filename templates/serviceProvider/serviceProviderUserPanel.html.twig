{% extends 'base.html.twig' %}

{% block title %}Hello PhotographerController!
{% endblock %}

{% block body %}

	<style>
		.im {
			height: 100%;
			width: 100%;
			object-fit: contain;
		}
	</style>

	<div class="container" style="margin-top:3%; margin-bottom: 280px">
		<h2 style="text-align:center">Podaj informacje na temat druku, który chcesz dodać</h2>
		<div class="row mt-5">
			<div class="col col-md-2 col-6">
				Podaj typ druku: nr1
			</div>
			<div class="col col-md-4 col-6">
				<input type="text">
			</div>
		</div>
		<div class="row mt-3">
			<div class="col col-md-2 col-6">
				Podaj nazwę druku nr:1
			</div>
			<div class="col col-md-4 col-6">
				<input type="text">
			</div>
		</div>
		<div class="row mt-3">
			<div class="col col-md-2 col-6">
				Podaj cenę druku nr:1
			</div>
			<div class="col col-md-4 col-6">
				<input type="text">
			</div>
		</div>
		<div class="mt-3">
			<h4>Podaj opis druku nr: 1</h4>
		</div>
		<textarea class="form-control" id="textarea1" rows="3"></textarea>

		<br>
		<br>
		<div class="row mt-5">
			<div class="col col-md-2 col-6">
				Podaj typ druku: nr2
			</div>
			<div class="col col-md-10 col-6">
				<div class="row">
					<div class="col col-md-4">
						<input type="text" id="input21" disabled>
					</div>
					<div class="col" style="margin-left:20px">
						<input class="form-check-input" type="checkbox" value="" id="checkboxnr2">
						<label class="form-check-label" for="checkboxnr2">
							Zaznacz, jeżeli chcesz dodać kolejny rodzaj druku.
						</label>
					</div>
				</div>
			</div>
		</div>
		<div class="row mt-3">
			<div class="col col-md-2 col-6">
				Podaj nazwę druku nr:2
			</div>
			<div class="col col-md-4 col-6">
				<input type="text" id="input22" disabled>
			</div>
		</div>
		<div class="row mt-3">
			<div class="col col-md-2 col-6">
				Podaj cenę druku nr:2
			</div>
			<div class="col col-md-4 col-6">
				<input type="text" id="input23" disabled>
			</div>
		</div>
		<div class="mt-3">
			<h4>Podaj opis druku nr: 2</h4>
		</div>
		<textarea class="form-control" rows="3" id="textarea2" disabled></textarea>

		<br>
		<br>
		<div class="row mt-5">
			<div class="col col-md-2 col-6">
				Podaj typ druku: nr3
			</div>
			<div class="col col-md-10 col-6">
				<div class="row">
					<div class="col col-md-4">
						<input type="text" id="input31" disabled>
					</div>
					<div class="col" style="margin-left:20px">
						<input class="form-check-input" type="checkbox" value="" id="checkboxnr3">
						<label class="form-check-label" for="checkboxnr3">
							Zaznacz, jeżeli chcesz dodać kolejny rodzaj druku.
						</label>
					</div>
				</div>
			</div>
		</div>
		<div class="row mt-3">
			<div class="col col-md-2 col-6">
				Podaj nazwę druku nr:3
			</div>
			<div class="col col-md-4 col-6">
				<input type="text" id="input32" disabled>
			</div>
		</div>
		<div class="row mt-3">
			<div class="col col-md-2 col-6">
				Podaj cenę druku nr:3
			</div>
			<div class="col col-md-4 col-6">
				<input type="text" id="input33" disabled>
			</div>
		</div>
		<div class="mt-3">
			<h4>Podaj opis druku nr: 3</h4>
		</div>
		<textarea class="form-control" rows="3" id="textarea3" disabled></textarea>

		<div class="mt-5" style="margin-left:40px; text-align:center">
			<input class="form-check-input" type="checkbox" value="" id="regulamin">
			<label class="form-check-label" for="regulamin">
				<h4>Akceptuję regulamin</h4>
			</label>
		</div>
		
        <div class="col-md-12 text-center">
			<button type="submit" class="btn btn-success mt-3" style="text-align:center"><h4>Wyślij prośbę o akceptacje zgłoszenia usługi</h4></button>
		</div>

	</div>


	<script>
		document.getElementById('checkboxnr2').onchange = function () {
document.getElementById('input21').disabled = !this.checked;
document.getElementById('input22').disabled = !this.checked;
document.getElementById('input23').disabled = !this.checked;
document.getElementById('textarea2').disabled = !this.checked;
}
document.getElementById('checkboxnr3').onchange = function () {
document.getElementById('input31').disabled = !this.checked;
document.getElementById('input32').disabled = !this.checked;
document.getElementById('input33').disabled = !this.checked;
document.getElementById('textarea3').disabled = !this.checked;
}
	</script>

{% endblock %}
