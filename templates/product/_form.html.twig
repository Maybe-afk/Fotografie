{% block body %}
	{{ form_start(form) }}

	<style>
		.im {
			height: 100%;
			width: 100%;
			object-fit: contain;
		}
	</style>

	<div class="container" style="margin-top:3%; margin-bottom: 280px;">
		<div class="col col-md-12 col-12 d-flex justify-content-center" style="margin-top:35px;">
			<div class="card" style="max-width:600px; height:500px">
				<div class="row">
					<div class="col col-md-1"></div>
					<div class="col col-md-5 col-12">
						<div style="margin-top:5%">Podaj nazwę zdjęcia</div>
					</div>
					<div class="col d-flex justify-content-start">
						{{ form_row(form.name, {'attr': {'class': 'form-control', 'style': 'margin-left: 0px; margin-top:3%; text-align:center; width:100%'}}) }}
					</div>
				</div>


				<div class="row">
					<div class="col col-md-1"></div>
					<div class="col col-md-5 col-12">
						<div style="margin-top:3%">Podaj ilość zdjęć</div>
					</div>
					<div class="col d-flex justify-content-start">
						{{ form_row(form.amount, {'attr': {'class': 'form-control', 'style': 'margin-left: 0px; margin-top:3%; text-align:center; width:100%'}}) }}
					</div>
				</div>
				<div class="row">
					<div class="col col-md-1"></div>
					<div class="col col-md-5 col-12">
						<div style="margin-top:3%">Podaj cenę zdjęcia</div>
					</div>
					<div class="col d-flex justify-content-start">
						{{ form_row(form.price, {'attr': {'class': 'form-control', 'style': 'margin-left: 0px; margin-top:3%; text-align:center; width:100%'}}) }}
					</div>
				</div>
				<div class="row">
					<div class="col col-md-1"></div>
					<div class="col col-md-5 col-12">
						<div style="margin-top:3%">Podaj autora zdjęcia</div>
					</div>
					<div class="col d-flex justify-content-start">
						{{ form_row(form.author, {'attr': {'class': 'form-control', 'style': 'margin-left: 0px; margin-top:3%; text-align:center; width:100%'}}) }}
					</div>
				</div>
				<div class="row">
					<div class="col col-md-1"></div>
					<div class="col col-md-5 col-12">
						<div style="margin-top:3%">Podaj opis zdjęcia</div>
					</div>
					<div class="col d-flex justify-content-start">
						{{ form_row(form.description, {'attr': {'class': 'form-control', 'style': 'margin-left: 0px; margin-top:3%; text-align:center; width:100%'}}) }}
					</div>
				</div>
				<div class="row">
					<div class="col col-md-1"></div>
					<div class="col col-md-5 col-12">
						<div style="margin-top:3%">Podaj link do zdjęcia</div>
					</div>
					<div class="col d-flex justify-content-start">
						{{ form_row(form.image, {'attr': {'class': 'form-control', 'style': 'margin-left: 0px; margin-top:3%; text-align:center; width:100%'}}) }}
					</div>
				</div>


				<div class="row">
					<div class="col col-md-1"></div>
					<div class="col col-md-5 col-12">
						<div style="margin-top:3%">Podaj rodzaj zdjęcia</div>
					</div>
					<div class="col d-flex justify-content-start">
						{{ form_row(form.categories, {'attr': {'class': 'form-control', 'style': 'margin-left: 0px; margin-top:3%; text-align:center; width:100%'}}) }}
					</div>
				</div>
				<div class="row">
					<div class="col col-md-1"></div>
					<div class="col col-md-7 col-12">
						<div style="margin-top:3%">Akceptuję regulamin<input class="form-check-input" type="checkbox" value="" id="flexCheckDefault" style="margin-left:30px"></div>
					</div>
					<div class="col col-md-4 col-2 d-flex justif"></div>
				</div>
				<div class="row">
					<div class="col col-md-1"></div>
					<div class="col col-md-7 col-12">
						<div class="row">
							<div class="col">
								<div style="margin-top:3%">Promuj</div>
							</div>
							<div class="col">
								{{form_row(form.promo, {'attr': {'class': 'form-check-input', 'style': ''}})}}
							</div>
						</div>
						<div class="col col-md-4 col-2"></div>
					</div>
					<div class="row mt-3">
						<div class="col col-md-2"></div>
						<div class="col col-md-8 col-12">
							<button class="btn btn-success" style="width:100%">{{ button_label|default('Wyślij prośbę o dodanie zdjęcia') }}</button>
						</div>
						<div class="col col-md-2 col-2"></div>
					</div>
				</div>
			</div>
		</div>
	</div>


	<script>
		var loadFile = function (event) {
var output = document.getElementById('output');
output.src = URL.createObjectURL(event.target.files[0]);
output.onload = function () {
URL.revokeObjectURL(output.src) // free memory
}
};
	</script>
	{{ form_end(form) }}


{% endblock %}
