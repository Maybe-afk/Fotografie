{% block body %}
	<style>
		.im {
			height: 100%;
			width: 100%;
			object-fit: contain;
			float: left;
		}

		.padding-0 {
			padding-right: 0;
			padding-left: 0;
		}
	</style>


	<div class="container" style="margin-top:3%; height:auto">
		<div class="row mt-2" style="height:300px;">
			<div class="col col-md-7 col-12" style="height:300px">
				<img src="{{product.image}}" alt="cos" class="card-img-top im">
			</div>
			<div class="col col-md-5 col-12">
				<div>
					<p style="font-size:20px">Ilość pozostałych kopii na sprzedaż:
						<b>{{product.amount}}</b>
					</p>
				</div>
				<div>
					<p style="font-size:20px">Cena zdjęcia:
						<b>{{product.price}}
							zł</b>
					</p>
				</div>
				<div>
					<p style="font-size:20px">Nazwa fotografa z bazy:
						<b>Nazwa fotografa z bazy</b>
					</p>
				</div>
				<div>
					<p style="font-size:20px">Ilość polubień:
						<b>Ilość z bazy</b>
					</p>
				</div>
				<!--<button class="btn btn-danger mt-1" style="width:100%">Usuń zdjęcie</button>-->
			</div>
		</div>
	</div>

	<div class="container mt-4">
		<div class="card">
			<form>
				<div class="row mx-0">
					<div class="col col-md-3 px-0">
						{% if app.user %}
							{{ app.user.name }}
							{{ app.user.firstname }}
						{% else %}

							<span class="input-group-text" id="forInputComment">Niezalogowany Użytkownik</span>
						{% endif %}
					</div>
					<div class="col col-md-7 px-0">
						<input type="text" class="form-control" id="comment" placeholder="Napisz komentarz" style="text-align:center" aria-describedby="forInputComment">
					</div>
					<div class="col col-md-2 px-0">
						<input type="submit" text="Wyślij wiadomość" class="btn btn-primary imageOfferButtons">
					</div>
				</div>
			</form>
		</div>
	</div>


