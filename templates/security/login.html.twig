{% extends 'base.html.twig' %}

{% block title %}Log in!{% endblock %}

{% block body %}
<form method="post">
    {% if error %}
        <div class="alert alert-danger">{{ error.messageKey|trans(error.messageData, 'security') }}</div>
    {% endif %}

    {% if app.user %}
        <div class="mb-3">
            You are logged in as {{ app.user.username }}, <a href="{{ path('app_logout') }}">Logout</a>
        </div>
    {% endif %}
          
 <div class="container" style="max-width:350px; margin-top:10%">
        <div class="card card-container">
            <h4 class="card-title mt-3 text-center">Logowanie</h4>
            <div class="card-body d-flex justify-content-center">    
                <div class='row'>
                    <div class='col col-md-12 col-12 d-flex justify-content-center' style="margin-top:2%">
                        E-mail
                    </div>
                    <div class='col col-md-12 col-12 d-flex justify-content-center'>
                       <input type="email" value="{{ last_username }}" name="email" id="inputEmail" class="form-control" required autofocus style="text-align:center; max-width:250px">
                    </div>
                    <div class='col col-md-12 col-12 d-flex justify-content-center' style="margin-top:2%">
                        Hasło: 
                    </div>
                    <div class='col col-md-12 col-12 d-flex justify-content-center'>
                       <input type="password" name="password" id="inputPassword" class="form-control" required style="text-align:center; max-width:250px">
                    </div>
             
                   <input type="hidden" name="_csrf_token" value="{{ csrf_token('authenticate') }}">

                   <div class="d-flex justify-content-center" style="margin-top: 4%">                    
                      <button class="btn btn-lg btn-primary" type="submit" style="width:150px">Zaloguj się</button>        
                   </div>
</form>
                   <div class="d-flex justify-content-center" style="margin-top: 4%">                    
                      <p><a href="{{path('app_forgot_password_request')}}"> Przypomnij hasło<a/></p>
                   </div>
            </div>
        </div>
    </div>
    {#
        Uncomment this section and add a remember_me option below your firewall to activate remember me functionality.
        See https://symfony.com/doc/current/security/remember_me.html

        <div class="checkbox mb-3">
            <label>
                <input type="checkbox" name="_remember_me"> Remember me
            </label>
        </div>
    #}

    
{% endblock %}
