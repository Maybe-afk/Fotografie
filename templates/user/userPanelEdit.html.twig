{% extends 'base.html.twig' %}

{% block title %}Hello UserController!
{% endblock %}

{% block body %}
	<style>
		
	</style>
	<div class="container" style="max-width: 700px; margin-top:10%; margin-bottom: 70px">
		<div class="card" style="text-align:center">
			<form>
				<h2>Panel edycji użytkownika</h2>
				<h5 class="card-title mt-3">Nazwa użytkownika</h5>
				<div class="card-body d-flex justify-content-center">
					<input type="text" class="form-control d-flex justify-content-center" id="userName" placeholder="nazwa z bazy" style="max-width: 350px; text-align:center">
				</div>
				<h5 class="card-title">E-mail</h5>
				<div class="card-body d-flex justify-content-center">
					<input type="email" class="form-control" id="Email" placeholder="nazwa emaila z bazy" style="max-width: 350px; text-align:center">
				</div>
				<h5 class="card-title">Hasło</h5>
				<div class="card-body d-flex justify-content-center">
					<input type="password" class="form-control" id="password" style="max-width: 350px; text-align:center">
				</div>
				<h5 class="card-title">Powtórz Hasło</h5>
				<div class="card-body d-flex justify-content-center">
					<input type="password" class="form-control" id="passwordRepeat" style="max-width: 350px; text-align:center">
				</div>

				<div class="card-body">
					<input type="submit" class="btn btn-primary" style="width: 200px;" value="Zapisz zmiany">
				</div>
			</form>
		</div>
	</div>
{% endblock %}
